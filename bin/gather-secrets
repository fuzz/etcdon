#!/bin/sh
#

mpath=/home/mastodon/live
p="${DON_PATH:-$HOME/.config/etcdon}"

echo "WARNING: This file is sensitive--don't check it into a public git repo!"
echo "Gathering secrets file..."

if  rsync -ac root@"$DON_HOST":"$mpath"/.env.production "$p"/local/; then
    echo "OK"; exit 0
else
    echo "FAIL"; exit 1
fi
