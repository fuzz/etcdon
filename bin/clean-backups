#!/bin/sh
#

p="${DON_PATH:-$HOME/.config/etcdon}"

echo -n "Removing all but the ten most recent postgres backups..."

cd "$p"/local/postgres || { echo "FAIL: cannot access directory"; exit 1; }
if ls -tp | grep -v '/$' |tail -n +11 | xargs -I {} rm -v -- {}; then
    echo "[OK]"; exit 0
else
    echo "[FAIL]"; exit 1
fi
